\begin_layout Standard
Radial Schroedinger equation:
\begin_inset Formula 
\[
-\frac{1}{2}\frac{\mathrm{d}^{2}u}{\mathrm{d}r^{2}}+\frac{\ell(\ell+1)}{2r^{2}}u+vu=Eu
\]

\end_inset


\end_layout

\begin_layout Standard
scalar relativistic radial Schroedinger equation:
\begin_inset Formula 
\[
-\frac{\mathrm{d}^{2}u}{\mathrm{d}r^{2}}-\frac{1}{2Mc^{2}}\frac{\mathrm{d}v}{\mathrm{d}r}\left(\frac{\mathrm{d}u}{\mathrm{d}r}-\frac{u}{r}\right)+\left[\frac{l(l+1)}{r^{2}}+2M(v-E)\right]u=0
\]

\end_inset

with relativistic mass:
\begin_inset Formula 
\[
M=1-\frac{1}{2c^{2}}\left(v-E\right)
\]

\end_inset

and the fine-structure constant 
\begin_inset Formula $\alpha=1/c=1/137.036$
\end_inset

 is set to zero for non-scalar relativistic calculation.
\end_layout

\begin_layout Standard
On logarithmic radial grids defined by:
 
\begin_inset Formula $(g=0,1,\ldots,N-1$
\end_inset

) and 
\begin_inset Formula $r\in[0,\infty)$
\end_inset


\begin_inset Formula 
\[
r=\frac{\beta g}{N-g}
\]

\end_inset


\begin_inset Formula 
\[
g=\frac{rN}{\beta+r}
\]

\end_inset

the Schroedinger equation becomes (change of independent variables from 
\begin_inset Formula $r$
\end_inset

 to 
\begin_inset Formula $g$
\end_inset

)
\begin_inset Formula 
\[
\frac{\mathrm{d}^{2}u}{\mathrm{d}g^{2}}c_{2}+\frac{\mathrm{d}u}{\mathrm{d}g}c_{1}+uc_{0}=0
\]

\end_inset

with vectors 
\begin_inset Formula $c_{0}$
\end_inset

,
 
\begin_inset Formula $c_{1}$
\end_inset

,
 and 
\begin_inset Formula $c_{2}$
\end_inset

 defined by:
\begin_inset Formula 
\[
c_{2}=-r^{2}\left(\frac{\mathrm{d}g}{\mathrm{d}r}\right)^{2}
\]

\end_inset


\begin_inset Formula 
\[
c_{1}=-\frac{\mathrm{d}^{2}g}{\mathrm{d}r^{2}}r^{2}-\frac{r^{2}}{2Mc^{2}}\frac{\mathrm{d}g}{\mathrm{d}r}\frac{\mathrm{d}v}{\mathrm{d}r}
\]

\end_inset


\begin_inset Formula 
\[
c_{0}=\ell(\ell+1)+2M(v-E)r^{2}+\frac{2}{2Mc^{2}}\frac{\mathrm{d}v}{\mathrm{d}r}
\]

\end_inset


\end_layout

\begin_layout Standard
Discretization of
\begin_inset Formula 
\[
\frac{\mathrm{d}^{2}u}{\mathrm{d}g^{2}}c_{2}+\frac{\mathrm{d}u}{\mathrm{d}g}c_{1}+uc_{0}=0
\]

\end_inset


\end_layout

\begin_layout Standard
Using centered difference:
 
\begin_inset Formula $\Delta g=1$
\end_inset

,
 center point index is 0
\begin_inset Formula 
\[
\left(u_{1}-2u_{0}+u_{-1}\right)c_{2}+\frac{1}{2}\left(u_{1}-u_{-1}\right)c_{1}+u_{0}c_{0}=0
\]

\end_inset


\begin_inset Formula 
\[
u_{1}c_{2}-2u_{0}c_{2}+u_{-1}c_{2}+\frac{1}{2}c_{1}u_{1}-\frac{1}{2}c_{1}u_{-1}+u_{0}c_{0}=0
\]

\end_inset


\begin_inset Formula 
\[
u_{1}c_{2}+\frac{1}{2}c_{1}u_{1}+u_{-1}c_{2}-\frac{1}{2}c_{1}u_{-1}+u_{0}c_{0}-2u_{0}c_{2}=0
\]

\end_inset


\begin_inset Formula 
\[
\left(c_{2}+\frac{1}{2}c_{1}\right)u_{1}+\left(c_{2}-\frac{1}{2}c_{1}\right)u_{-1}+\left(c_{0}-2c_{2}\right)u_{0}=0
\]

\end_inset


\end_layout

\begin_layout Standard
Rearranging:
\begin_inset Formula 
\[
\left(\frac{1}{2}c_{1}+c_{2}\right)u_{1}+\left(c_{0}-2c_{2}\right)u_{0}=\left(\frac{1}{2}c_{1}-c_{2}\right)u_{-1}
\]

\end_inset

Finding 
\begin_inset Formula $u_{-1}$
\end_inset


\begin_inset Formula 
\[
\frac{\left(\frac{1}{2}c_{1}+c_{2}\right)u_{1}+\left(c_{0}-2c_{2}\right)u_{0}}{\left(\frac{1}{2}c_{1}-c_{2}\right)}=u_{-1}
\]

\end_inset

Finding 
\begin_inset Formula $u_{1}$
\end_inset

:
\begin_inset Formula 
\[
\left(\frac{1}{2}c_{1}+c_{2}\right)u_{1}=\left(\frac{1}{2}c_{1}-c_{2}\right)u_{-1}-\left(c_{0}-2c_{2}\right)u_{0}
\]

\end_inset


\begin_inset Formula 
\[
u_{1}=\frac{\left(\frac{1}{2}c_{1}-c_{2}\right)u_{-1}-\left(c_{0}-2c_{2}\right)u_{0}}{\left(\frac{1}{2}c_{1}+c_{2}\right)}
\]

\end_inset


\end_layout

